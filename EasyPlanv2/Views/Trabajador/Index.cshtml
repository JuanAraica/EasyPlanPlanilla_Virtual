@model IEnumerable<EasyPlanv2.Models.Tbl_Trabajador>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDemo.cshtml";
}




<div class="card text-center">

    <div class="card-body">
        <img src="~/Content/logo.jpg" />
        <h5 class="card-title">Workers</h5>
        <a href="@Url.Action("Create","Trabajador")" class="btn btn-primary"> Add New </a>
    </div>
</div>




<table class="table table-dark" style="text-align:center">
    <thead>
        <tr>

            <th scope="col">
                N° Employee
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                E-mail
            </th>
            <th scope="col">
                City
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="datos">
                <td>
                    @Html.DisplayFor(modelItem => item.NumEmpleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ciudad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <button type="button" class="btn btn-success">
                        <span style="color:#FF0000">@Html.ActionLink("Edit", "Edit", new { id = item.CedulaTra })</span>
                    </button>
                    <button type="button" class="btn btn-info">
                        @Html.ActionLink("Details", "Details", new { id = item.CedulaTra })
                    </button>
                    <button type="button" class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.CedulaTra })
                    </button>


                </td>
            </tr>
        }
    </tbody>
</table>