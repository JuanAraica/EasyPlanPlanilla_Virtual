@model EasyPlanv2.Models.Tbl_Trabajador












<header>

    <form action="@Url.Content("~/Trabajador/Login")" method="post" align="right">
        <br />

        <div>
            <label style="background-color:white">E-mail</label>
            <input class="form-group" border="1" type="text" name="Correo" />
            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
        </div>
        <div>
            <label style="background-color:white">Password</label>
            <input class="form-group" border="1" type="password" name="CedulaTra" />
            @Html.ValidationMessageFor(model => model.CedulaTra, "", new { @class = "text-danger" })
        </div>
        <div class="danger">
            <strong style="background-color:white">@ViewBag.Error</strong>

        </div>
        <div><input type="submit" value="Entrar" class="btn btn-success" /></div>
    </form>





