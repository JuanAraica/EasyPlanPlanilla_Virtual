@model IEnumerable<EasyPlanv2.Models.Tbl_Jornada>

@{
    ViewBag.Title = "Jornadas";
    Layout = "~/Views/Shared/_LayoutDemo.cshtml";
}

<div class="card text-center">

    <div class="card-body">
        <img src="~/Content/logo.jpg" />
        <h5 class="card-title">Journeys</h5>
        <a href="@Url.Action("Create", "Jornada")" class="btn btn-primary"> Add New </a>
    </div>
</div>
 
<table class="table table-dark" style="text-align:center">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                Observation
            </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreJornada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoJornada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>

            <td>
                <button type="button" class="btn btn-success">
                    <span style="color:#FF0000">@Html.ActionLink("Edit", "Edit", new { id = item.idJornada })</span>
                </button>
                <button type="button" class="btn btn-info">
                    @Html.ActionLink("Details", "Details", new { id = item.idJornada })
                </button>
                <button type="button" class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.idJornada })
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>
