@model IEnumerable<EasyPlanv2.Models.Tbl_Salario>

@{
    ViewBag.Title = "All Salaries";
    Layout = "~/Views/Shared/_LayoutDemo.cshtml";
}

 


<div class="card text-center">

    <div class="card-body">
        <img src="~/Content/logo.jpg" />
        <h5 class="card-title">Salaries</h5>
        <a href="@Url.Action("Create", "Salario")" class="btn btn-primary"> Add New </a>
    </div>
</div>

<table class="table table-dark" style="text-align:center">
    <tr>
        <th>
            Trabajador
        </th>
        <th>
            Desde...
        </th>
        <th>
            ...Hasta
        </th>
        <th>
            Monto Bruto -
        </th>
        <th>
            Total de deducciones = 
        </th>
        <th>
            Salario Neto
        </th>
        <th>
            Fecha de emición
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Tbl_Trabajador.Nombre) @Html.DisplayFor(modelItem => item.Tbl_Trabajador.Apellido)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PrimeraFecha)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UltimaFecha)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SalarioBruto)
    </td>
    <td>
       -@Html.DisplayFor(modelItem => item.TotalDeducciones)=
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SalarioNeto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaSalario)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.idSalario }) |
        @Html.ActionLink("Details", "Details", new { id = item.idSalario }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.idSalario })
    </td>
</tr>
    }

</table>
