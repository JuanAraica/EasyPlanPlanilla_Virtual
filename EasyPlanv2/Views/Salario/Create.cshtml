@model EasyPlanv2.Models.Tbl_Salario

@{
    ViewBag.Title = "Add a new Salary";
    Layout = "~/Views/Shared/_LayoutResp.cshtml";
}

 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Salary</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
