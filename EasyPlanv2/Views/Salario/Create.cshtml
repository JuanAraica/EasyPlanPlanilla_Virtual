            @Html.LabelFor(model => model.CedulaTra, "Trabajador(a)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CedulaTra", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CedulaTra, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Monto bruto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SalarioBruto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SalarioBruto, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Prestamos", htmlAttributes: new { @class = "control-label col-md-2" })
