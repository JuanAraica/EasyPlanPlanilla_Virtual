                @Html.EditorFor(model => model.Prestamos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prestamos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Adelantos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
